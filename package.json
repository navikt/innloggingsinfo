{
  "name": "innloggingsinfo",
  "version": "0.0.1",
  "description": "",
  "main": "app/index.js",
  "scripts": {
    "init": "run-s -l init:*",
    "init:clean": "rimraf ./build",
    "init:setup": "mkdirp ./build/js ./build/css",
    "build:lib": "copyfiles -f ./node_modules/jquery/dist/jquery.min.js ./build/js",
    "build:js": "browserify ./app/index.js -o ./build/js/index.js -t [ babelify ]",
    "build:less": "lessc ./app/index.less ./build/css/index.big.css",
    "build:html": "copyfiles -f ./app/index.html ./build && copyfiles -f ./app/internal/* ./build/internal",
    "prod:js": "uglifyjs ./build/js/index.js -o ./build/js/index.js -c -m",
    "prod:less": "uglifycss ./build/css/index.big.css > ./build/css/index.css && rimraf ./build/css/index.big.css",
    "lint": "esw *.js",
    "test": "mocha ./app/tests.js --compilers js:babel-core/register",
    "tdd": "mocha -w ./app/tests.js --compilers js:babel-core/register",
    "dev:js": "watchify ./app/index.js -o ./build/js/index.js -t [ babelify ] -v",
    "dev:less": "lesswatch ./ ./build/css",
    "dev": "npm-run-all -l init --parallel build:lib dev:*",
    "build": "npm-run-all -l init --parallel test lint build:* --parallel prod:*"
  },
  "author": "Name <mail@mail.com>",
  "license": "ISC",
  "dependencies": {
    "es6-promise": "3.2.1",
    "jquery": "2.1.4",
    "modig-frontend": "git+https://github.com/navikt/modig-frontend.git",
    "object.entries": "^1.0.3",
    "ponyfill-array-find": "1.0.1",
    "url-pattern": "1.0.2",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-cli": "6.14.0",
    "babel-core": "6.18.2",
    "babel-eslint": "6.1.2",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-2": "6.13.0",
    "babelify": "7.3.0",
    "browserify": "13.1.0",
    "chai": "3.5.0",
    "copyfiles": "1.0.0",
    "eslint": "^3.6.0",
    "eslint-config-airbnb": "11.1.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "2.2.1",
    "eslint-plugin-react": "6.2.0",
    "eslint-watch": "2.1.14",
    "less": "2.7.1",
    "lesswatch": "0.0.4",
    "mkdirp": "0.5.1",
    "mocha": "3.1.2",
    "npm-run-all": "3.1.0",
    "rimraf": "2.5.4",
    "uglify-js": "^2.7.3",
    "uglifycss": "0.0.21",
    "watchify": "3.7.0"
  }
}
