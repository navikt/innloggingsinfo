{
  "name": "innloggingsinfo",
  "version": "0.0.0",
  "description": "Innloggingsinfo frontend",
  "repository": "https://github.com/navikt/innloggingsinfo",
  "main": "app/index.js",
  "scripts": {
    "init": "run-s -l init:*",
    "init:clean": "rimraf ./build",
    "init:setup": "mkdirp ./build/js ./build/css",
    "build:js": "browserify ./app/index.js -o ./build/js/index.js -t [ babelify ]",
    "build:less": "lessc ./app/index.less ./build/css/index.big.css",
    "build:html": "copyfiles -f ./app/index.html ./build && copyfiles -f ./app/internal/* ./build/internal",
    "prod:js": "uglifyjs ./build/js/index.js -o ./build/js/index.js -c -m",
    "prod:less": "uglifycss ./build/css/index.big.css > ./build/css/index.css && rimraf ./build/css/index.big.css",
    "lint": "esw *.js",
    "test": "mocha ./app/tests.js --require babel-core/register js:babel-core/register",
    "tdd": "mocha -w ./app/tests.js --require babel-core/register js:babel-core/register",
    "dev:js": "watchify ./app/index.js -o ./build/js/index.js -t [ babelify ] -v",
    "dev:less": "lesswatch ./ ./build/css",
    "dev": "npm-run-all -l init --parallel build:lib dev:*",
    "build": "npm-run-all -l init --parallel test lint build:* --parallel prod:*"
  },
  "author": "NAV",
  "license": "MIT",
  "dependencies": {
    "es6-promise": "4.2.6",
    "modig-frontend": "git+https://github.com/navikt/modig-frontend.git",
    "object.entries": "^1.0.3",
    "ponyfill-array-find": "1.0.1",
    "url-pattern": "1.0.3",
    "url-polyfill": "^1.1.5",
    "url-search-params-polyfill": "^6.0.0",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel": "6.5.2",
    "babel-cli": "6.26.0",
    "babel-core": "6.18.2",
    "babel-eslint": "6.1.2",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.14.0",
    "babel-preset-stage-2": "6.13.0",
    "babelify": "7.3.0",
    "browserify": "16.2.3",
    "chai": "4.2.0",
    "copyfiles": "2.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-watch": "4.0.2",
    "less": "3.9.0",
    "lesswatch": "0.0.4",
    "mkdirp": "0.5.1",
    "mocha": "6.1.4",
    "npm-run-all": "4.1.5",
    "rimraf": "2.5.4",
    "uglify-js": "^3.4.9",
    "uglifycss": "0.0.21",
    "watchify": "3.11.1"
  }
}
